<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-center">Account Register</h3>
            <form action="/users/register" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" value="{{name}}" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" value="{{email}}" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" value="{{password}}" required>
                    <small class="form-text text-muted">Your password must be atleast 4 characters long.</small>
                </div>
                <div class="form-group">
                    <label for="password">Confirm Password</label>
                    <input type="password" class="form-control" name="password2" value="{{password2}}" required>
                    <small class="form-text text-muted">To confirm, type the new password again.</small>
                </div>
                <button type="submmit" class="btn btn-primary mb-3 rounded-0">Submit</button>
                <p>Already a member?&nbsp;<a href="/users/login">Log in</a></p>
            </form>
        </div>
    </div>
</div>